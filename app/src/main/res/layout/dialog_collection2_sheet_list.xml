<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_bottom_round"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/dialog_collection_list_title"
            android:text="@string/label_Dialog_love"
            android:textColor="@color/colorWhite"
            android:textSize="14sp"
            android:textStyle="bold"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:paddingTop="18dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dialog_collection_list_icon"
            android:src="@drawable/iv_collection_to_list"
            android:layout_alignBottom="@id/dialog_collection_list_title"
            android:layout_alignParentEnd="true"
            android:paddingStart="18dp"
            android:paddingEnd="20dp"
            android:contentDescription="@string/label_Dialog_love"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:id="@+id/dialog_song_more_option_line"
            android:src="@color/color99White"
            android:layout_below="@id/dialog_collection_list_title"
            android:layout_marginTop="14dp"
            android:contentDescription="@string/label_Dialog_line"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dialog_collection_list_rv"
            android:layout_below="@id/dialog_song_more_option_line"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"/>

    </RelativeLayout>

</layout>